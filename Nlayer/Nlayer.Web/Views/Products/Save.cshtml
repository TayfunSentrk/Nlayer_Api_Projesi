@{
    ViewData["Title"] = "Save"; // Sayfa başlığını ayarlar
}

@model ProductDto // Görünüm için modeli belirtir

<h1>Save Product</h1> <!-- Sayfa başlığını görüntüler -->

<div class="row">
    <div class="col-md-6">
        <!-- Ürün kaydetme formu -->
        <form asp-action="Save" method="post">

            <!-- Ürün adı girişi -->
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Stok girişi -->
            <div class="form-group">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <!-- Fiyat girişi -->
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Kategori seçimi -->
            <div class="form-group">
                <label>Category Adı</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Kaydet butonu -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
